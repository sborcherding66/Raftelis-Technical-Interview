@page
@model IndexModel

<h1>Property Listings</h1>

<!-- Keep track of the current sort state -->
<input type="hidden" id="currentSort" value="@Model.CurrentSort">

@if (Model.PropertyRecords != null && Model.PropertyRecords.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th class="sortable-header text-center" onclick="window.location.href='?sort=pin&currentSort=@Model.CurrentSort'">PIN</th>
                <th class="sortable-header text-center" onclick="window.location.href='?sort=address'">Address</th>
                <th class="sortable-header text-center" onclick="window.location.href='?sort=owner'">Owner</th>
                <th class="sortable-header text-center" onclick="window.location.href='?sort=marketValue&currentSort=@Model.CurrentSort'">Market Value</th>
                <th class="sortable-header text-center" onclick="window.location.href='?sort=saleDate&currentSort=@Model.CurrentSort'">Sale Date</th>
                <th class="sortable-header text-center" onclick="window.location.href='?sort=salePrice&currentSort=@Model.CurrentSort'">Sale Price</th>
                <th class="text-center">Link to Data</th>
                <th class="text-center">Google Maps</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model.PropertyRecords)
            {
                <tr>
                    <td>@record.Pin</td>
                    <td>@record.Address</td>
                    <td>@record.Owner</td>
                    <td>@record.MarketValue.ToString("C")</td>
                    <td>@(record.SaleDate.HasValue ? record.SaleDate.Value.ToShortDateString() : "")</td>
                    <td>@record.SalePrice.ToString("C")</td>
                    <td><a href="@record.Link" target="_blank">View</a></td>
                    <td><a href="@record.GoogleMapsLink" target="_blank" class="maps-link">@record.Address</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No records found.</p>
}
